<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xlyc.uikit.NoScrollViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/color_F3F5F4">

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="15dp"
            app:iconNormal="@mipmap/tab_home_normal"
            app:iconSelected="@mipmap/tab_home_selected"
            app:iconWidth="13dp"
            app:itemMarginTop="5dp"
            app:itemText="@string/tab_home"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/color_FF5B5B5B"
            app:textColorSelected="@color/color_212121"
            app:touchDrawable="@drawable/selector_bottom_tab" />


        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="15dp"
            app:iconNormal="@mipmap/tab_video_normal"
            app:iconSelected="@mipmap/tab_video_selecte"
            app:iconWidth="15dp"
            app:itemMarginTop="5dp"
            app:itemText="@string/tab_video"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/color_FF5B5B5B"
            app:textColorSelected="@color/color_212121"
            app:touchDrawable="@drawable/selector_bottom_tab" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="15dp"
            app:iconNormal="@mipmap/tab_find_normal"
            app:iconSelected="@mipmap/tab_find_selecte"
            app:iconWidth="15dp"
            app:itemMarginTop="5dp"
            app:itemText="@string/tab_micro"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/color_FF5B5B5B"
            app:textColorSelected="@color/color_212121"
            app:touchDrawable="@drawable/selector_bottom_tab" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="15dp"
            app:iconNormal="@mipmap/tab_shop_normal"
            app:iconSelected="@mipmap/tab_shop_selecte"
            app:iconWidth="15dp"
            app:itemMarginTop="5dp"
            app:itemText="@string/tab_shop"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/color_FF5B5B5B"
            app:textColorSelected="@color/color_212121"
            app:touchDrawable="@drawable/selector_bottom_tab" />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:iconHeight="15dp"
            app:iconNormal="@mipmap/tab_me_normal"
            app:iconSelected="@mipmap/tab_me_selecte"
            app:iconWidth="15dp"
            app:itemMarginTop="5dp"
            app:itemText="@string/tab_me"
            app:itemTextSize="8sp"
            app:openTouchBg="true"
            app:textColorNormal="@color/color_FF5B5B5B"
            app:textColorSelected="@color/color_212121"
            app:touchDrawable="@drawable/selector_bottom_tab" />
    </com.chaychan.library.BottomBarLayout>

</LinearLayout>
