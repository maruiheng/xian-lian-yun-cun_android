<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/register_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:src="@mipmap/close" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/register_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户注册"
                android:textColor="#ff202020"
                android:textSize="22sp"
                android:layout_marginBottom="12dp"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/go_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号快速登录"
                android:textColor="#ff4886ff"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/register_text"
                />
        </RelativeLayout>

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="number"
            android:maxLength="13"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            >
            <EditText
                android:id="@+id/register_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入验证码"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/get_code"
                android:inputType="number"
                android:maxLength="6"
                />
            <Button
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="12sp"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/register_code"
                />
        </RelativeLayout>
        <EditText
            android:id="@+id/register_invite_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入推荐码（非必填项）"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:maxLength="10"
            android:lines="1"
            />
        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入6-20位英文或数字密码"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="textPassword"
            android:maxLength="20"
            />
        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次确认密码"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:inputType="textPassword"
            android:maxLength="20"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            >
            <CheckBox
                android:id="@+id/register_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/register_prot_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/register_check"
                android:layout_alignBaseline="@+id/register_check"
                />
            <TextView
                android:id="@+id/register_prot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《县链云村平台注册协议》"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/register_prot_text"
                android:layout_alignBaseline="@+id/register_check"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="立即注册"
            style="@style/btn_login"
            />
    </LinearLayout>

</RelativeLayout>